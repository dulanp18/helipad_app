<div class="container">

  <h1 class="title">Your Booking</h1>

  <div class="middle-container">
    <div class="text-container">
      <div class="writing">
        <h3>Title: <%= @purchase.listing.title %></h3>
        <h3>Description: <%= @purchase.listing.description %></h3>
        <h3>Address: <%= @purchase.listing.address %></h3>
        <h3>Start date: <%= @purchase.start_time.strftime('%d-%m-%Y') %></h3>
        <h3>Finish date: <%= @purchase.finish_time.strftime('%d-%m-%Y') %></h3>
        <h3>Total cost: $<%= @purchase.total_cost %></h3>
        <h3>Status: <%= @purchase.status.titlecase %></h3>
      </div>
    </div>
  <% if @user == @purchase.user %>
    <%= link_to "Edit Booking", edit_listing_purchase_path(@listing, @purchase), class: "btn btn-info" %>
  <% else %>
    <%= link_to "Accept Booking", listing_purchase_accept_path(@listing,@purchase), :method => :patch, class: "btn btn-info" %>
    <%= link_to "Decline Booking", listing_purchase_decline_path(@listing,@purchase) , :method => :patch, class: "btn btn-info" %>
  <% end %>

  </div>
</div>
