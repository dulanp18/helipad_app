<div class="navbar navbar-expand-sm navbar-light fixed-top navbar-lewagon">
  <%= link_to home_path, class: "navbar-brand" do %>
    <%= image_tag "1300372.svg", class: "image" %>
  <h1>&nbsp Helipad</h1>
  <% end %>



  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Rent A Helicopter", listings_path, class: "nav-link navbar-button" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "bars-solid.svg", class: "avatar dropdown-toggle fas fa-bars", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <p class="dropdown-item"> Logged in as <%= current_user.first_name  %></p>
            <%= link_to "Add A Helicopter", new_listing_path, class: "dropdown-item" %>
            <%= link_to "Manage My Helicopters", my_listings_path, class: "dropdown-item" %>
            <%= link_to "Manage My Bookings", purchases_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Rent A Helicopter", listings_path, class: "nav-link navbar-button" %>
          <%= link_to "Login", new_user_session_path, class: "nav-link navbar-button" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
